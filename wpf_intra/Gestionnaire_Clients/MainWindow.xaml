<Window x:Class="Gestionnaire_Clients.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestionnaire_Clients"
        mc:Ignorable="d"
        Title="Gestion de clients" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Fichier"></MenuItem>
            <MenuItem Header="Édition"></MenuItem>
            <MenuItem Header="Affichage"></MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <Label>Client sélectionné :</Label>
        </StatusBar>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Label>Liste des clients</Label>
            <Button VerticalAlignment="Center">Nouveau client</Button>
        </StackPanel>
        <ListView Width="250" DockPanel.Dock="Left"></ListView>
        <StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0">Prénom :</Label>
                <TextBox VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" Width="100" HorizontalAlignment="Left"></TextBox>
                <Label Grid.Row="0" Grid.Column="2">Nom :</Label>
                <TextBox VerticalAlignment="Center" Grid.Row="0" Grid.Column="3" Width="100" HorizontalAlignment="Left"></TextBox>
                <Label Grid.Row="1" Grid.Column="0">Adresse :</Label>
                <TextBox VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"></TextBox>
                <Label Grid.Row="2" Grid.Column="0">Ville :</Label>
                <TextBox VerticalAlignment="Center" Grid.Row="2" Grid.Column="1"></TextBox>
                <Label Grid.Row="2" Grid.Column="2">Province :</Label>
                <TextBox VerticalAlignment="Center" Grid.Row="2" Grid.Column="3" Width="50" HorizontalAlignment="Left"></TextBox>
                <Label Grid.Row="3" Grid.Column="0">Code postal :</Label>
                <TextBox VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" Width="100" HorizontalAlignment="Left"></TextBox>
                <Label Grid.Row="4" Grid.Column="0">Contact :</Label>
                <TextBox VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"></TextBox>
                <Button VerticalAlignment="Center" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" Margin="10">Supprimer client</Button>
            </Grid>
            <Image></Image>
        </StackPanel>
    </DockPanel>
</Window>
